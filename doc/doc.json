{
    "openapi": "3.0.0",
    "info": {
        "version": "0.0.1",
        "title": "Rustywiki API",
        "description": "서버 측 API를 정의하고 공유하기 위한 문서입니다."
    },
    "servers": [
        {
            "url": "http://127.0.0.1:11111",
            "description": "no"
        }
    ],
    "components": {
        "securitySchemes": {
            "identity_server_auth": {
                "type": "oauth2",
                "flows": {
                    "implicit": {
                        "authorizationUrl": "https://demo.identityserver.io/connect/authorize",
                        "scopes": {
                            "api": "api"
                        }
                    }
                }
            }
        }
    },
    "security": [
        {
            "identity_server_auth": ["api"]
        }
    ],
    "tags": [
        {
            "name": "document",
            "description": "문서 작성 기능"
        }
    ],
    "paths": {
        "/document": {
            "post": {
                "tags": ["document"],
                "summary": "회원가입입니다.",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "id",
                        "required": true,
                        "type": "string",
                        "description": "사용자 아이디(이메일)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/Response/JustSuccess"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Parameter",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/Response/JustFailed"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/Response/JustFailed"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/auth/users/{user_id}": {
            "get": {
                "tags": ["auth"],
                "summary": "로그인입니다.",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "required": true,
                        "type": "string",
                        "description": "사용자 아이디(이메일)"
                    },
                    {
                        "in": "query",
                        "name": "key",
                        "required": true,
                        "type": "string",
                        "description": "암호화된 패스워드"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/Response/LoginSuccess"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Parameter",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/Response/JustFailed"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/Response/JustFailed"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": ["auth"],
                "summary": "프로필 변경",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "required": true,
                        "type": "string",
                        "description": "사용자 아이디(이메일)"
                    },
                    {
                        "in": "body",
                        "name": "files",
                        "required": true,
                        "type": "multipart",
                        "description": "이미지 파일"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/Response/JustSuccess"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Parameter",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/Response/JustFailed"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/Response/JustFailed"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "Response": {
        "JustSuccess": {
            "type": "object",
            "properties": {
                "success": {
                    "type": "boolean",
                    "example": true
                }
            }
        },
        "JustFailed": {
            "type": "object",
            "properties": {
                "success": {
                    "type": "boolean",
                    "example": false
                }
            }
        },
        "LoginSuccess": {
            "type": "object",
            "properties": {
                "success": {
                    "type": "boolean",
                    "example": true
                },
                "token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIU……"
                }
            }
        }
    }
}
