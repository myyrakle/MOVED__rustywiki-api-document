{
    "openapi": "3.0.0",
    "info": {
        "version": "0.0.1",
        "title": "Rustywiki API",
        "description": "서버 측 API를 정의하고 공유하기 위한 문서입니다."
    },
    "servers": [
        {
            "url": "http://127.0.0.1:11111",
            "description": "no"
        }
    ],
    "components": {
        "securitySchemes": {
            "identity_server_auth": {
                "type": "oauth2",
                "flows": {
                    "implicit": {
                        "authorizationUrl": "https://demo.identityserver.io/connect/authorize",
                        "scopes": {
                            "api": "api"
                        }
                    }
                }
            }
        }
    },
    "security": [
        {
            "identity_server_auth": ["api"]
        }
    ],
    "tags": [
        {
            "name": "auth",
            "description": "인증 관련"
        },
        {
            "name": "image",
            "description": "이미지 관련"
        },
        {
            "name": "document",
            "description": "문서 관련"
        }
    ],
    "paths": {
        "/auth/signup": {
            "post": {
                "tags": ["auth"],
                "summary": "회원가입입니다.",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "email",
                        "required": true,
                        "type": "string",
                        "description": "사용자 아이디(이메일)"
                    },
                    {
                        "in": "body",
                        "name": "password",
                        "required": true,
                        "type": "string",
                        "description": "사용자 패스워드"
                    },
                    {
                        "in": "body",
                        "name": "nickname",
                        "required": true,
                        "type": "string",
                        "description": "닉네임. (30자 이하)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success=성공. email_duplicated=이메일중복. message=메세지",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "success": true, 
                                        "email_duplicated": false,
                                        "message": ""
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Parameter",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {}
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {}
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": ["auth"],
                "summary": "로그인입니다.",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "email",
                        "required": true,
                        "type": "string",
                        "description": "사용자 아이디(이메일)"
                    },
                    {
                        "in": "body",
                        "name": "password",
                        "required": true,
                        "type": "string",
                        "description": "패스워드"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success=성공. login_failed=로그인실패. token=인증토큰. message=메세지",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "success": true, 
                                        "login_failed": false,
                                        "token": "asdqwjehsxmqwiuz,ruwoqi,zrojwqe.crovw.eo",
                                        "message": "foobar"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Parameter",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {}
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {}
                                }
                            }
                        }
                    }
                }
            }
        },
        "/image": {
            "post": {
                "tags": ["image"],
                "summary": "이미지 업로드입니다. (인증 필요)",
                "consumes": ["multipart/form-data"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "email",
                        "required": true,
                        "type": "file",
                        "description": "사용자 아이디(이메일)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success=성공. image_url",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "success": true, 
                                        "image_id": 12,
                                        "image_url": "/foo/bar"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Parameter",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {}
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {}
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {}
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "Response": {
        "JustSuccess": {
            "type": "object",
            "properties": {
                "success": {
                    "type": "boolean",
                    "example": true
                }
            }
        }
    }
}
